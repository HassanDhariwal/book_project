<h1 style="color:red">Book_record</h1>

<style>
table, th, td {
  border: 1px solid black; 
</style>

<table style=" width:80%" }>
	
	<tbody>
		<tr style="background-color: lawngreen;">	
			<th >id  </th>
			<th >name  </th>
			<th >writer_name </th>
			<th >price </th>
			<th >Show </th>
			<th >edit</th>
			<th >destroy </th>
		</tr>
			<% @books.each do |book|%>
		<tr >	
			<td style="color:blue"><%= book.id %></td>
			<td style="color:blue"><%= book.name  %></td>
			<td style="color:blue"><%= book.writer_name %></td>
			<td style="color:blue"><%= book.price %></td>
			<td style="color:blue"><%= link_to "Show" , book_path(book.id), class: "btn btn-primary"%></td>
			<td><%= link_to "edit", edit_book_path(book.id), class: "btn btn-primary" %></td>
			<td style="color:blue"><%= link_to "destroy", book_path(book.id), class: "btn btn-danger ",  data: {:confirm => "Arue you sure?"}, :method => :delete %></td>
		</tr>
<% end%>

	</tbody>
</table>
