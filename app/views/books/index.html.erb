
<style>
table, th, td {
  border: 1px solid black; 
</style>
<br>

<table class="table table-striped  table-hover ">
	  <caption>List of Books</caption>

  <thead>
    <tr class="bg-success">
      <th>id</th>
      <th>name</th>
      <th>writer_name</th>
      <th>price</th>
      <% if current_user %>
      <th>Show</th> 
      <th>edit</th>
      <th>destroy</th>
      <% end%>
    </tr>
  </thead>
	<tbody>		
			<% @books.each do |book|%>
		<tr >	
			<th ><%= book.id %></th>
			<td ><%= book.name  %></td>
			<td ><%= book.writer_name %></td>
			<td ><%= book.price %></td>

			<% if current_user %> <!-- ager koi user present ha to tb ya show ker vay other vise nahi -->
			<td style="color:blue"><%= link_to "Show" , book_path(book.id), class: "btn btn-primary"%></td>
			<td><%= link_to "edit", edit_book_path(book.id), class: "btn btn-primary" %></td>
			<td style="color:blue"><%= link_to "destroy", book_path(book.id), class: "btn btn-danger ",  data: {:confirm => "Arue you sure?"}, :method => :delete %></td>
			<% end %>
		</tr>

<% end%>
	</tbody>
</table>
