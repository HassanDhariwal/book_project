<style>
table, th, td {
  border: 1px solid black; }
</style>
<br>

<table class="table table-striped  table-hover ">
	  <caption>List of author</caption>
  <thead>
    <tr class="bg-danger">
      <th>id</th>
      <th>Author_name</th>
      <th>Book_Author</th>
      <% if current_user %>
      <th>Show</th> 
      <th>edit</th>
      <th>destroy</th>
      <% end%>
  </thead>
	<tbody>		
			<% @authors.each do |author|%>
		<tr >	
			<th ><%= author.id %></th>
			<td ><%= author.name  %></td>
			<td ><%= @count[author.id] %> </td>
			<% if current_user %> <!-- ager koi user present ha to tb ya show ker vay other vise nahi -->
			<td ><%= link_to "Show" , author_path(author.id), class: "btn btn-secondary"%></td>
			<td ><%= link_to "edit", edit_author_path(author.id), class: "btn btn-primary" %></td>
			<td ><%= link_to "destroy", author_path(author.id), class: "btn btn-danger ",  data: {:confirm => "Arue you sure?"}, :method => :delete %></td>
			<% end %>
		</tr>
			<% end%>
	</tbody>
</table>

